{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    // "rootDir": "src",
    "baseUrl": ".", // 基础路径
    "paths": {
      "@tntx/*": ["packages/*/src"] // 配置路径别名
    }
  }
}
